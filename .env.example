# OmniFlow Environment Variables Example
# Copy this to Replit Secrets (not .env file)

# ===================================
# APPLICATION CONFIGURATION
# ===================================
NEXT_PUBLIC_APP_URL=https://app.omniflow.wmart.in

# ===================================
# FIREBASE CONFIGURATION
# ===================================
# Get these from Firebase Console → Project Settings → General
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Service Account JSON)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# ===================================
# PAYMENT GATEWAYS
# ===================================

# Stripe (International Payments)
STRIPE_SECRET_KEY=sk_test_xxxxx  # Use sk_live_ for production
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxx  # Use pk_live_ for production
STRIPE_WEBHOOK_SECRET=whsec_xxxxx  # From Stripe Dashboard → Webhooks

# Razorpay (India Payments)
RAZORPAY_KEY_ID=rzp_test_xxxxx  # Use rzp_live_ for production
RAZORPAY_KEY_SECRET=xxxxx
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx  # Same as RAZORPAY_KEY_ID
RAZORPAY_WEBHOOK_SECRET=xxxxx  # From Razorpay Dashboard → Webhooks

# ===================================
# AI SERVICES (Google Genkit)
# ===================================
GOOGLE_AI_API_KEY=your_gemini_api_key

# ===================================
# EMAIL SERVICES
# ===================================

# Sender.net
SENDER_API_KEY=your_sender_api_key

# Brevo (Alternative)
BREVO_API_KEY=your_brevo_api_key

# Custom SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password

# ===================================
# SMS SERVICES
# ===================================

# MSG91 (India)
MSG91_AUTH_KEY=your_msg91_key
MSG91_SENDER_ID=your_sender_id
MSG91_DLT_ENTITY_ID=your_dlt_entity_id

# Fast2SMS (India - Alternative)
FAST2SMS_API_KEY=your_fast2sms_key

# Twilio (International)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# WHATSAPP SERVICES
# ===================================

# MSG91 WhatsApp
MSG91_WHATSAPP_AUTH_KEY=your_msg91_whatsapp_key

# Fast2SMS WhatsApp
FAST2SMS_WHATSAPP_API_KEY=your_fast2sms_whatsapp_key

# Meta WhatsApp Cloud API
META_WHATSAPP_PHONE_ID=your_phone_id
META_WHATSAPP_ACCESS_TOKEN=your_access_token
META_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# WATI
WATI_API_ENDPOINT=https://live-server-xxxxx.wati.io
WATI_API_KEY=your_wati_api_key

# AiSensy
AISENSY_API_KEY=your_aisensy_key
AISENSY_CAMPAIGN_NAME=your_campaign_name
AISENSY_DESTINATION=your_destination

# Gupshup
GUPSHUP_API_KEY=your_gupshup_key
GUPSHUP_APP_NAME=your_app_name

# Authkey
AUTHKEY_API_KEY=your_authkey_key

# ===================================
# CRM INTEGRATIONS
# ===================================

# HubSpot
HUBSPOT_API_KEY=your_hubspot_key

# Bitrix24
BITRIX24_WEBHOOK_URL=https://your_domain.bitrix24.com/rest/1/xxxxx

# Zoho CRM
ZOHO_CLIENT_ID=your_client_id
ZOHO_CLIENT_SECRET=your_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token

# ===================================
# UTILITIES
# ===================================

# ImgBB (Image Hosting)
IMGBB_API_KEY=your_imgbb_key

# ===================================
# NOTES
# ===================================
# 
# SECURITY:
# - Never commit this file with actual values to git
# - Use Replit Secrets for all sensitive values
# - Rotate keys regularly
# - Use different keys for development and production
#
# TESTING:
# - Use test/sandbox keys during development
# - Stripe test keys start with: sk_test_ / pk_test_
# - Razorpay test keys start with: rzp_test_
#
# PRODUCTION:
# - Switch to live keys only when ready for production
# - Update all webhook URLs to production domain
# - Verify all integrations are working
# - Enable monitoring and alerts
